# Blockfrost API Configuration
NEXT_PUBLIC_BLOCKFROST_API_KEY=your_preview_api_key_here
NEXT_PUBLIC_NETWORK=preview

# Optional: Blockfrost URL (defaults to preview if not set)
NEXT_PUBLIC_BLOCKFROST_URL=https://cardano-preview.blockfrost.io/api/v0

# Backend API URL (for protocol operations)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# Base URL for Open Graph metadata (optional, defaults to localhost)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Registration Flow Enable/Disable Flags
# Set to 'true' or 'false' to enable/disable specific registration flows
# Default: all flows are enabled if not specified
NEXT_PUBLIC_FLOW_DUMMY_ENABLED=true
NEXT_PUBLIC_FLOW_FREEZE_AND_SEIZE_ENABLED=true
